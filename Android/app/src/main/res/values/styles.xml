<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">#7E3981BA</item>
    </style>

    <style name="ProgressBarTheme" parent="AppTheme">

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="ProgressDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.DefaultEditText">
        <item name="android:textSize">@dimen/textSizeBig</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.DefaultTextInputLayout">
        <item name="android:textColor">@color/authHintSelect</item>
        <item name="android:textSize">@dimen/auth_font_small</item>
    </style>

    <style name="authTextButton">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/login_corners_big</item>
        <item name="android:layout_marginBottom">@dimen/marginSmall</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/auth_state_select_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextColor">#707070</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
    </style>

    <style name="standard_spinner" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@drawable/shape_spinner_background</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/textSizeLarge</item>
        <item name="android:textColor">#707070</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="windowFixedHeightMajor">100%</item>
        <item name="windowFixedHeightMinor">100%</item>
    </style>

</resources>
